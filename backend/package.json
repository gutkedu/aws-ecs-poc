{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend services for AWS ECS POC",
  "scripts": {
    "install:api": "cd api && npm install",
    "install:worker": "cd worker && npm install",
    "install:all": "npm run install:api && npm run install:worker",
    "start:api": "cd api && npm start",
    "start:worker": "cd worker && npm start",
    "build:api": "cd api && docker build -t express-api .",
    "build:worker": "cd worker && docker build -t message-worker .",
    "build:all": "npm run build:api && npm run build:worker",
    "run:api": "docker run -p 3000:3000 express-api",
    "run:worker": "docker run message-worker",
    "dev:api": "cd api && npm run dev",
    "dev:worker": "cd worker && npm run dev"
  },
  "author": "",
  "license": "ISC"
}
